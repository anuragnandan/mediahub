<h1>Profile for <%= @user.email %></h1>

<h3>Courses</h3>
<ul class="list-group">
  <% @user.favorite_courses.each do |course| %>
      <li class="list-group-item">
        <%= link_to course.name, course %>
      </li>
  <% end %>
</ul>

<h3>Videos</h3>
<ul class="list-group">
  <% @user.favorite_file_attachments.each do |fa| %>
      <li class="list-group-item">
        <%= link_to "#{base_name(fa.file.path)} on course #{fa.course.name}", course_path(fa.course) %>
      </li>
  <% end %>
</ul>
